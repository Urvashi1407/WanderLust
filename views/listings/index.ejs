<% layout("../Views/layouts/boilerplate.ejs") -%>

<style>
/* ---------- FILTER BAR ---------- */
/* ====== GLOBAL RESET ====== */
body{
  overflow-x: hidden;
}




.tax-info{
  display: none;
}
.tax-toggle{
  border: 1px solid black;
  border-radius: 1rem;
  height: 3.5rem;
  padding: 1rem;
}

/* ====== FILTER BAR ====== */
#filters{
  margin-top: 0.5rem;
  display:flex;
  align-items:center;
  gap:1.2rem;
  padding:0.6rem 1rem;
  width:100%;
  box-sizing:border-box;
  background:white;
  border-bottom:1px solid #eee;
  position:sticky;
  top:75px;   

   z-index: 1;
  overflow-x:auto;
  flex-wrap:nowrap;
}


/* Each filter */
.filter{
  text-align:center;
  opacity:0.7;
  min-width:80px;
  flex-shrink:0;
  transition:0.2s ease;
}

.filter:hover{
  opacity:1;
  cursor:pointer;
  transform:scale(1.05);
}

.filter i{
  font-size:1.2rem;
}

.filter p{
  font-size:0.75rem;
  margin:0;
}

/* ====== TAX TOGGLE ====== */
.tax-toggle{
  margin-left:auto;
  display:flex;
  align-items:center;
  white-space:nowrap;
}

/* ====== CARDS ====== */

.listing-card{
  border:none;
  margin-bottom:2rem;
  transition:0.3s ease;
}

.listing-card:hover{
  transform:translateY(-5px);
}

.card-img-top{
  border-radius:1rem;
  object-fit:cover;
}

.card-body{
  padding:0.4rem 0;
}

.card-text{
  font-size:0.95rem;
}

.listing-link{
  text-decoration:none;
  color:inherit;
}

/* ====== MOBILE RESPONSIVE ====== */

@media (max-width:768px){

  /* Filters scroll horizontally */
  #filters{
    overflow-x:auto;
    flex-wrap:nowrap;
    justify-content:flex-start;
  }

  #filters::-webkit-scrollbar{
    display:none;
  }

  .filter{
    min-width:70px;
  }

  .filter i{
    font-size:1rem;
  }

  .filter p{
    font-size:0.7rem;
  }

  /* Toggle moves below filters */
  .tax-toggle{
    margin-left:0;
    padding-left:1rem;
  }

  /* Cards full width spacing */
  .row{
    padding:0 1rem;
  }
}




</style>


  <div id="filters">
